{% extends "base.html.twig" %}
{% block title %}
	Produits
{% endblock %}

{% block content %}
	<div class="container my-5">
		<div class="row">
			{% for category in categories %}
				<div class="col-sm mb-4">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title text-center">
								<a href="{{ path('product_by_category', {id: category.id}) }}">
									{{ category.nom }}
								</a>
							</h5>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

		<div class="container my-5">
			<a href="{{ path('product_liste')}}" class="text-center mb-4">Page pagin√©e</a>
			<h1 class="text-center mb-4">Liste des produits</h1>
			{{ component('Package:SearchPackages') }}
			<div class="row"></div>
		{% endblock %}
